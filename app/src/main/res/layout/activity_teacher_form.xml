<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".forms.teacherForm">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textAlignment="center"
                android:padding="10dp"
                android:text="Teacher Data Form"
                android:textColor="@android:color/black"
                android:textSize="25dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation = "horizontal">


                <ImageView
                    android:id="@+id/view_image"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:padding="10dp"
                    android:layout_alignParentLeft="true"
                    app:srcCompat="@drawable/ic_login"/>

                <Button
                    android:id="@+id/uploadImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorAccent"
                    android:onClick="getImg"
                    android:text="Upload Profile Picture"
                    android:layout_centerInParent="true"
                    android:layout_gravity="bottom"
                    android:layout_toRightOf="@+id/view_image"
                    android:textColor="@android:color/white"/>

            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp"
                app:contentPaddingBottom="15dp"
                app:contentPaddingLeft="4dp"
                app:contentPaddingRight="15dp"
                android:clickable="true"
                app:contentPaddingTop="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/gray300"
                        app:cardCornerRadius="5dp"
                        app:contentPaddingBottom="1dp"
                        app:contentPaddingLeft="1dp"
                        app:contentPaddingRight="1dp"
                        app:contentPaddingTop="1dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="3dp"
                            android:text="Contact Details"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </android.support.v7.widget.CardView>

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Name"
                        android:windowSoftInputMode="adjustResize|stateHidden"
                        android:imeOptions="actionDone"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/email"
                        android:windowSoftInputMode="adjustResize|stateHidden"
                        android:imeOptions="actionDone"
                        android:inputType="textEmailAddress" />

                    <EditText
                        android:id = "@+id/designation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/designation"
                        android:windowSoftInputMode="adjustResize|stateHidden"
                        android:imeOptions="actionDone"
                        android:inputType="textPersonName"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/departmentLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_alignParentLeft="true"
                            android:padding="5dp"
                            android:text="Select Department "
                            android:textColor="@android:color/black"
                            android:textSize="18dp" />

                        <Spinner
                            android:id="@+id/department"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="7dp"
                            android:entries="@array/departments"
                            android:prompt="@string/chooseDepartment" />
                    </LinearLayout>

                    <!--<EditText
                        android:id = "@+id/department"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/department"
                        android:windowSoftInputMode="adjustResize|stateHidden"
                        android:imeOptions="actionDone"
                        android:inputType="textPersonName"/>-->

                    <EditText
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/address"
                        android:windowSoftInputMode="adjustResize|stateHidden"
                        android:imeOptions="actionDone"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/mobileNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/number_personal"
                        android:windowSoftInputMode="adjustResize|stateHidden"
                        android:imeOptions="actionDone"
                        android:inputType="phone" />

                    <EditText
                        android:id="@+id/officeNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/number_office"
                        android:windowSoftInputMode="adjustResize|stateHidden"
                        android:imeOptions="actionDone"
                        android:inputType="phone" />

                    <EditText
                        android:id="@+id/homepage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/homepage_personal"
                        android:windowSoftInputMode="adjustResize|stateHidden"
                        android:imeOptions="actionDone"
                        android:inputType="textWebEditText" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp"
                app:contentPaddingBottom="15dp"
                app:contentPaddingLeft="4dp"
                app:contentPaddingRight="15dp"
                android:clickable="true"
                app:contentPaddingTop="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/gray300"
                        app:cardCornerRadius="5dp"
                        app:contentPaddingBottom="1dp"
                        app:contentPaddingLeft="1dp"
                        app:contentPaddingRight="1dp"
                        app:contentPaddingTop="1dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="3dp"
                            android:text="@string/Schedule"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </android.support.v7.widget.CardView>

                    <Button
                        android:id="@+id/getSchedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorAccent"
                        android:text="Fill your weekly schedule"
                        android:textColor="@android:color/white"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</ScrollView>